{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">

    <div class="row">

        <div class="col-md-8">

            <div class="box">

                <div class="box-header">
                    {#<h3 class="box-title">{{ user.name }}</h3>#}
                </div>

                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'profile.show.username'|trans }}</dt>
                        <dd>{{ user.username }}</dd>

                        <dt>{{ 'profile.show.email'|trans }}</dt>
                        <dd>{{ user.email }}</dd>

                        <dt>{{ 'profile.show.first-name'|trans }}</dt>
                        <dd>{{ user.firstName }}</dd>

                        <dt>{{ 'profile.show.last-name'|trans }}</dt>
                        <dd>{{ user.lastName }}</dd>

                    </dl>

                </div>

            </div>

        </div>

        <div class="col-md-4">
            <div class="box box-default">
                <div class="box-header">
                    <h3>Profile Photo</h3>
                </div>
                <div class="box-body">
                    {% include 'AppBundle:User:_avatar_form.html.twig' %}
                </div>
            </div>

            <div class="box">

                <div class="box-header">
                    <h3 class="box-title">Account Settings</h3>
                    <hr>
                    <div class="list-group">
                        <a class="list-group-item" href="{{ url('fos_user_resetting_request') }}"><i class="fa fa-key fa-fw" aria-hidden="true"></i>&nbsp; Reset Password</a>
                    </div>
                </div>

                <div class="box-body">

                </div>

            </div>

        </div>

    </div>
</div>
