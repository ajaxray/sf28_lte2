{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">

    <div class="row">

        <div class="col-md-7">

            <div class="box">

                <div class="box-header">
                    {#<h3 class="box-title">{{ user.name }}</h3>#}
                </div>

                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'profile.show.username'|trans }}</dt>
                        <dd>{{ user.username }}</dd>

                        <dt>{{ 'profile.show.email'|trans }}</dt>
                        <dd>{{ user.email }}</dd>

                        <dt>{{ 'profile.show.first-name'|trans }}</dt>
                        <dd>{{ user.firstName }}</dd>

                        <dt>{{ 'profile.show.last-name'|trans }}</dt>
                        <dd>{{ user.lastName }}</dd>

                    </dl>

                </div>

            </div>

        </div>

        <div class="col-md-5">

            <div class="box">

                <div class="box-header">
                    <h3 class="box-title">Password change or admin things here</h3>
                </div>

                <div class="box-body">

                </div>

            </div>

        </div>

    </div>
</div>
