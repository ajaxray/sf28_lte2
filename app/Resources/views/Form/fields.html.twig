{% block form_row %}
    {% set type =  form.vars.block_prefixes.1 %}
    {% if 'class' not in attr|keys %}
        {% set attr = attr|merge({'class': 'form-control'}) %}
    {% endif %}

    <div class="form-group">

        {% if 'checkbox' != type %}
            {{ form_label(form, null, {'label_attr': {'class': 'control-label'}}) }}
        {% endif %}

        <div class="control-group">

            {{ form_widget(form, {'attr': attr}) }}

            {% if 'checkbox' == type %}
                {{ form_label(form, null, {'label_attr': {'class': 'inline'}}) }}
            {% endif %}

            <span class="field-errors">{{ form_errors(form) }}</span>

            {% for attrname,attrvalue in attr %}
                {% if attrname == 'help' %}<span class="help-block">{{ attrvalue|raw }}</span>{% endif %}
            {% endfor %}

        </div>

    </div>
{% endblock form_row %}