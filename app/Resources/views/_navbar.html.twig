<!-- Sidebar toggle button-->
<a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
    <span class="sr-only">Toggle navigation</span>
</a>

<!-- Navbar Right Menu -->
<div class="navbar-custom-menu">

    <ul class="nav navbar-nav">

        <!-- User Account Menu -->
        {% if app.user %}
        <li class="dropdown user user-menu">

            <!-- Menu Toggle Button -->
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <!-- The user image in the navbar-->
                <img src="/images/avatars/{{ app.user.profilePicture|default('default.jpg') }}" class="user-image" alt="User Image">
                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                <span class="hidden-xs">{{ app.user.name }}</span>
            </a>

            <ul class="dropdown-menu">
                <li class="user-header">
                    <img src="/images/avatars/{{ app.user.profilePicture|default('default.jpg') }}" class="img-circle" alt="User Image">
                    <p>{{ app.user.name }}<small>Member since {{ app.user.createdAt|date('F j, Y') }}</small>
                    </p>
                </li>
                <!-- Menu Footer-->
                <li class="user-footer">
                    <div class="pull-left">
                        {#<a href="{{ path('fos_user_profile_edit') }}" class="btn btn-default btn-flat">Profile</a>#}
                        <a href="{{ path('fos_user_profile_show') }}" class="btn btn-default btn-flat">Profile</a>
                    </div>
                    <div class="pull-right">
                        <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-flat">Sign out</a>
                    </div>
                </li>
            </ul>
        </li>
        {% endif %}

    </ul>

</div>